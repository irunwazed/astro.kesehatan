    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const toggleBtn = document.getElementById("penelitian-toggle");
        const dropdown = document.getElementById("penelitian-dropdown");
        const arrow = document.getElementById("penelitian-arrow");

        toggleBtn?.addEventListener("click", () => {
          const expanded = toggleBtn.getAttribute("aria-expanded") === "true";
          toggleBtn.setAttribute("aria-expanded", String(!expanded));
          dropdown?.classList.toggle("hidden");
          arrow?.classList.toggle("rotate-180");
        });
      });
    </script>

    <script>
      import { PenelitianService } from "src/client/service/penelitian";
import { getStatusPenelitianNama } from "src/helpers/dto/penelitian";

      const notifIsi = document.getElementById("notif-isi") as HTMLUListElement;

      const getTimeFromTimestamp = (timestamp: string) => {
        const date = new Date(timestamp);

        // buatkan agar ambil sudah berapa lama dari sekarang
        const now = new Date();
        const diff = now.getTime() - date.getTime(); // selisih dalam milidetik
        const diffMinutes = Math.floor(diff / (1000 * 60));
        const diffHours = Math.floor(diff / (1000 * 60 * 60));
        const diffDays = Math.floor(diff / (1000 * 60 * 60 * 24));
        if (diffDays > 0) {
          return `${diffDays} hari yang lalu`;
        } else if (diffHours > 0) {
          return `${diffHours} jam yang lalu`;
        } else if (diffMinutes > 0) {
          return `${diffMinutes} menit yang lalu`;
        } else {
          return `baru saja`;
        }
      };

      const getNotifikasi = async () => {
        try {
          const response = await PenelitianService.getNotifikasi();
          const data = response.data;
          if (!data) {
            return;
          }
          console.log("Notifikasi Penelitian:", data);
          data.map((item) => {
            notifIsi.innerHTML += `
              <li
                class="px-4 py-2 hover:bg-gray-50 cursor-pointer text-sm text-gray-700"
              >
                üì© Penelitian : ${item.nama} (${getStatusPenelitianNama(item.status)}) diperbarui ${getTimeFromTimestamp(
              item.updated_at ?? "",
            )} 
              </li>
            `;
            console.log(
              "Notifikasi Item:",
              getTimeFromTimestamp(item.updated_at ?? ""),
            );
          });
        } catch (error) {
          console.error("Error fetching notifikasi:", error);
        }
      };
      getNotifikasi();
    </script>

    <style>
      /* Animasi halus saat expand/collapse */
      #penelitian-dropdown {
        transition: all 0.2s ease-in-out;
      }
    </style>
  </body>
</html>
