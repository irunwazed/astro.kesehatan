---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="">
    
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-green-50 px-4">
    <div class="bg-white/90 backdrop-blur-md shadow-xl rounded-2xl w-full max-w-md p-8 border border-gray-100">
    <section
      class=""
    >
      <!-- Header -->
      <h2 class="text-3xl font-semibold text-center text-gray-800 mb-6">
        Daftar Akun Baru üìù
      </h2>
      <p class="text-sm text-gray-500 text-center mb-8">
        Buat akun baru untuk mulai menggunakan aplikasi
      </p>

      <!-- Form -->
      <form id="register-form" class="space-y-5">
        <!-- Nama Lengkap -->
        <div>
          <label
            for="full_name"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Nama Lengkap</label
          >
          <input
            type="text"
            id="full_name"
            name="full_name"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="Masukkan nama lengkap kamu"
          />
        </div>

        <!-- Email -->
        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="contoh@email.com"
          />
        </div>

        <!-- Password -->
        <div>
          <label
            for="password"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
          />
        </div>

        <!-- Tombol Daftar -->
        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 rounded-md transition-colors duration-200"
        >
          Daftar Sekarang
        </button>
      </form>

      <!-- Divider -->
      <div class="mt-6 text-center text-sm text-gray-600">
        Sudah punya akun?
        <a href="/login" class="text-blue-600 font-medium hover:underline">
          Masuk di sini
        </a>
      </div>
    </section>
    </div></div>
  </main>

  <!-- Script -->
  <script>

     function isLoading(status: boolean): void {
            const overlay = document.getElementById(
                "loading-overlay",
            ) as HTMLDivElement;
            overlay.classList.toggle("hidden", !status);
        }

        
    async function registerUser(event:any) {
      event.preventDefault();

      const form = document.querySelector("#register-form");
      const formData = new FormData(form as HTMLFormElement);
      const full_name = (formData.get("full_name") as string)?.trim();
      const email = (formData.get("email") as string)?.trim();
      const password = (formData.get("password") as string)?.trim();

      if (!full_name || !email || !password) {
        alert("Semua kolom wajib diisi!");
        return;
      }
      isLoading(true)
      try {
        const res = await fetch("/api/register", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ full_name, email, password }),
        });

        const result = await res.json();

        if (res.ok && result.status) {
          alert(`‚úÖ Pendaftaran berhasil! Selamat datang, ${full_name}!`);
          window.location.href = "/login";
        } else {
          alert(`‚ùå Gagal daftar: ${result.message ?? "Terjadi kesalahan"}`);
        }
      } catch (err) {
        console.error("Register error:", err);
        alert("Terjadi kesalahan saat menghubungi server.");
      } finally {
        isLoading(false)
      }
    }

    document
      .querySelector("#register-form")
      ?.addEventListener("submit", registerUser);
  </script>
</Layout>
