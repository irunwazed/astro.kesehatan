---
import { checkRole, getUserFromToken } from "src/helpers/lib/jwt";
import MainLayout from "../../layouts/MainLayout.astro";
import { USER } from "src/helpers/lib/constant";

const token = Astro.cookies.get("token")?.value;
// console.log("Token:", token);
const user = getUserFromToken(token || "");
---

<MainLayout title="Dashboard">
  {
    checkRole(user?.roles ?? [], [USER.ADMIN, USER.ADMIN_ETIK, USER.ADMIN_VALIDASI]) && (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-lg font-medium text-gray-800 mb-2">
            Total Penelitian
          </h3>
          <p class="text-3xl font-bold text-blue-600">24</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-lg font-medium text-gray-800 mb-2">Dalam Proses</h3>
          <p class="text-3xl font-bold text-yellow-600">8</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-lg font-medium text-gray-800 mb-2">Selesai</h3>
          <p class="text-3xl font-bold text-green-600">16</p>
        </div>
      </div>
    )
  }
</MainLayout>
